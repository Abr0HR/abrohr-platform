# ==============================================
# AbrO HR Platform - Environment Variables
# ==============================================

# Database (PostgreSQL)
# Get from Supabase: https://supabase.com > Settings > Database > Connection string
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1"

# JWT Secret (Generate strong random string)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Email (Optional - for password reset, campaign links)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ==============================================
# PRODUCTION SETTINGS (Uncomment for deployment)
# ==============================================

# DATABASE_URL="your-production-postgres-url"
# JWT_SECRET="generate-new-secret-for-production"
# NODE_ENV=production
# FRONTEND_URL=https://your-domain.com
